<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall2.mapper.LogMapper">

    <select id="userLogin" resultType="Integer">
        SELECT count(*) FROM user
        WHERE user_name = #{user_name} AND user_password = #{user_password}
    </select>
    <select id="findEmail" resultType="Integer">
        SELECT count(*) FROM user
        WHERE user_email = #{user_email}
    </select>
    <select id="findName" resultType="Integer">
        SELECT count(*) FROM user
        WHERE user_name = #{user_name}
    </select>
    <select id="getByUserName" resultType="com.example.mall2.pojo.User">
        SELECT user_id id, user_name name, user_password password, user_email email FROM user
        WHERE user_name = #{user_name}
    </select>
    <insert id="insertRegister" >
        INSERT INTO user(user_name, user_password, user_email)
        VALUES (#{user_name}, #{user_password}, #{user_email})
    </insert>
    <select id="getRoles" resultType="com.example.mall2.pojo.User_Role">
        SELECT user_id userId, role_id roleId FROM user_role
        WHERE user_id = #{user_id}
    </select>
    <select id="getPermissions" resultType="com.example.mall2.pojo.Role_Permission">
        SELECT * FROM user
        WHERE role_id = #{role_id}
    </select>
    <select id="getById" resultType="com.example.mall2.pojo.Permission">
        SELECT * FROM user
        WHERE per_id = #{per_id}
    </select>


